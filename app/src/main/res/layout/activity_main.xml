<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/logo"
    android:layout_width="365dp"
    android:layout_height="422dp"
    android:layout_marginTop="52dp"
    android:src="@drawable/incova"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/meutitulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Crie. Acompanhe. Conquiste."
    android:textSize="26sp"
    android:textColor="@color/blue_forte"
    android:textStyle="bold"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Botão Esquerdo (azul com texto branco) -->
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/button_login"

    android:layout_width="0dp"
    android:textAllCaps="false"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textSize="19sp"
    android:background="@drawable/button_blue_main_activity"
    android:layout_marginTop="80dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toBottomOf="@id/meutitulo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/button_abrir_cadastro_pedido"
    app:layout_constraintHorizontal_chainStyle="spread" />

<!-- Botão Direito (branco com texto azul e borda azul) -->
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/button_abrir_cadastro_pedido"
    android:layout_width="0dp"
    android:background="@drawable/button_white_main_activity"
    android:textAllCaps="false"
    android:textStyle="bold"
    android:layout_height="wrap_content"
    android:text="Cadastrar"
    android:textColor="@color/black"
    android:textSize="19sp"
    android:layout_marginTop="80dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="32dp"
    app:layout_constraintTop_toBottomOf="@id/meutitulo"
    app:layout_constraintStart_toEndOf="@id/button_login"
    app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>