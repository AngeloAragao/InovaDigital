<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editIdPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID do Pedido"
            android:inputType="number" />

        <Button
            android:id="@+id/btnBuscarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Pedido"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textNomeCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: "
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textTipoServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Serviço: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDescricaoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textQuantidadePedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textEntregaPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrega: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textValorPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnEditarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Pedido"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
